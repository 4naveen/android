<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.project.spliceglobal.recallgo.CategoryListActivity">
    <include
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/hint_text_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Add Your Own Brand"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:textColorHint="@color/hind_text_color" />


            <TextView
                android:layout_width="0dp"
                android:id="@+id/add"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:textStyle="bold"
                />
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line_color"/>

        <ListView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_bg_color"
            android:divider="@null"
            android:scrollbars="vertical">
        </ListView>

</LinearLayout>
