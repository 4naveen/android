<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">
    <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <!--Bottom View For Right to Left-->


        <LinearLayout
            android:id="@+id/bottom_wrapper1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/layout_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_screen2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/delete" />

                <TextView
                    android:id="@+id/tvdelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Remove"

                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_move"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/move" />

                <TextView
                    android:id="@+id/tvMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Move"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>
        <!-- Another Bottom View For Left to Right -->

        <LinearLayout
            android:id="@+id/bottom_wrapper2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/layout_Complete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/dot_dark_screen2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/complete" />

                <TextView
                    android:id="@+id/tvComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Complete"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_later"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_screen2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/later" />

                <TextView
                    android:id="@+id/tvLater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Later"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>

        <!-- Top View,  Row itemView of RecyclerView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_view"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/letter"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.09" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="Name"
                    android:singleLine="true"
                    android:textColor="#212121"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharedby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="quantity"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/bg_screen2"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

</android.support.v7.widget.CardView>
